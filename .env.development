# Maruba Koperasi Development Environment Configuration
# Development Environment Settings - FOR DEBUGGING

# Database Configuration
DB_HOST=localhost
DB_NAME=maruba
DB_USER=root
DB_PASS=root
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_general_ci

# Application Configuration
APP_NAME=KOPERASI APP
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/maruba

# Security Configuration (Development - Relaxed)
JWT_SECRET=dev_jwt_secret_key_here_change_in_production
CSRF_TOKEN_SECRET=dev_csrf_secret_key_here_change_in_production
SESSION_LIFETIME=7200

# Email Configuration (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=dev@maruba.id
SMTP_PASSWORD=dev_password
SMTP_FROM=dev@maruba.id

# File Upload Configuration (Development)
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx
UPLOAD_PATH=/opt/lampp/htdocs/maruba/uploads

# Cache Configuration (Development - Disabled)
CACHE_DRIVER=none
CACHE_PREFIX=maruba_dev_
CACHE_TTL=60

# Logging Configuration (Development - Verbose)
LOG_LEVEL=debug
LOG_PATH=/opt/lampp/htdocs/maruba/logs
LOG_MAX_FILES=10
LOG_MAX_SIZE=10M

# API Configuration (Development)
API_VERSION=v1
API_RATE_LIMIT=10000
API_TIMEOUT=60

# Mobile App Configuration (Development)
MOBILE_APP_VERSION=1.0.0-dev
MOBILE_JWT_SECRET=dev_mobile_jwt_secret_here_change_in_production

# Monitoring Configuration (Development - Disabled)
MONITORING_ENABLED=false
MONITORING_ALERT_EMAIL=dev@maruba.id
MONITORING_WEBHOOK_URL=http://localhost/maruba/webhooks/monitoring

# Backup Configuration (Development - Manual)
BACKUP_ENABLED=false
BACKUP_PATH=/opt/lampp/htdocs/maruba/backups
BACKUP_RETENTION_DAYS=7
BACKUP_ENCRYPTION=false
BACKUP_SCHEDULE=manual

# SSL Configuration (Development - Optional)
SSL_ENABLED=false
SSL_CERT_PATH=/opt/lampp/htdocs/maruba/ssl/maruba.crt
SSL_KEY_PATH=/opt/lampp/htdocs/maruba/ssl/maruba.key

# Performance Configuration (Development - Relaxed)
MEMORY_LIMIT=512M
MAX_EXECUTION_TIME=300
UPLOAD_MAX_FILESIZE=10M
POST_MAX_SIZE=10M

# Security Configuration (Development - Relaxed)
SECURITY_HEADERS_ENABLED=false
RATE_LIMITING_ENABLED=false
INPUT_VALIDATION_ENABLED=true
XSS_PROTECTION_ENABLED=true
CSRF_PROTECTION_ENABLED=true
SQL_INJECTION_PROTECTION_ENABLED=true

# Development Settings
DISPLAY_ERRORS=1
ERROR_REPORTING=E_ALL
DEBUG_BAR=true
PROFILER=true

# Session Security (Development - Relaxed)
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=Lax
SESSION_COOKIE_LIFETIME=7200

# File Permissions (Development)
UPLOAD_PERMISSIONS=644
UPLOAD_DIR_PERMISSIONS=755
LOG_PERMISSIONS=644

# Database Connection Pooling (Development - Disabled)
DB_POOL_ENABLED=false
DB_POOL_MIN_CONNECTIONS=1
DB_POOL_MAX_CONNECTIONS=5
DB_POOL_IDLE_TIMEOUT=60

# Redis Configuration (Development - Disabled)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Third-party Integrations (Development - Mock)
TWILIO_ACCOUNT_SID=mock_twilio_sid
TWILIO_AUTH_TOKEN=mock_twilio_token
TWILIO_PHONE_NUMBER=mock_phone_number

# Google Services (Development - Mock)
GOOGLE_CLIENT_ID=mock_google_client_id
GOOGLE_CLIENT_SECRET=mock_google_client_secret
GOOGLE_API_KEY=mock_google_api_key

# Payment Gateway (Development - Mock)
PAYMENT_GATEWAY_ENABLED=false
PAYMENT_GATEWAY_PROVIDER=mock_provider
PAYMENT_GATEWAY_API_KEY=mock_api_key
PAYMENT_GATEWAY_SECRET=mock_secret
PAYMENT_GATEWAY_WEBHOOK_URL=http://localhost/maruba/webhooks/payment

# Cloud Storage (Development - Local)
AWS_ACCESS_KEY_ID=dev_access_key
AWS_SECRET_ACCESS_KEY=dev_secret_key
AWS_REGION=us-east-1
AWS_BUCKET=dev_bucket
AWS_ENDPOINT=http://localhost:9000

# Analytics (Development - Disabled)
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=mock_provider
ANALYTICS_API_KEY=mock_api_key

# Maintenance Mode (Development - Disabled)
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Development system under maintenance. Please try again later."
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1
