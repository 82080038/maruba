# Maruba Koperasi Production Environment Configuration
# Production Environment Settings - FOR LIVE DEPLOYMENT

# Database Configuration
DB_HOST=localhost
DB_NAME=maruba
DB_USER=root
DB_PASS=root
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_general_ci

# Application Configuration
APP_NAME=Maruba Koperasi
APP_ENV=production
APP_DEBUG=false
APP_URL=https://maruba.id

# Security Configuration (Production - Strict)
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_32_CHAR_MINIMUM
CSRF_TOKEN_SECRET=CHANGE_THIS_IN_PRODUCTION_32_CHAR_MINIMUM
SESSION_LIFETIME=7200

# Email Configuration (Production)
SMTP_HOST=smtp.maruba.id
SMTP_PORT=587
SMTP_USERNAME=noreply@maruba.id
SMTP_PASSWORD=CHANGE_THIS_IN_PRODUCTION
SMTP_FROM=noreply@maruba.id

# File Upload Configuration (Production)
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx
UPLOAD_PATH=/opt/lampp/htdocs/maruba/uploads

# Cache Configuration (Production - Enabled)
CACHE_DRIVER=redis
CACHE_PREFIX=maruba_prod_
CACHE_TTL=3600

# Logging Configuration (Production - Minimal)
LOG_LEVEL=error
LOG_PATH=/opt/lampp/htdocs/maruba/logs
LOG_MAX_FILES=30
LOG_MAX_SIZE=10M

# API Configuration (Production)
API_VERSION=v1
API_RATE_LIMIT=1000
API_TIMEOUT=30

# Mobile App Configuration (Production)
MOBILE_APP_VERSION=1.0.0
MOBILE_JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_32_CHAR_MINIMUM

# Monitoring Configuration (Production - Enabled)
MONITORING_ENABLED=true
MONITORING_ALERT_EMAIL=admin@maruba.id
MONITORING_WEBHOOK_URL=https://maruba.id/webhooks/monitoring

# Backup Configuration (Production - Automated)
BACKUP_ENABLED=true
BACKUP_PATH=/opt/lampp/htdocs/maruba/backups
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true
BACKUP_SCHEDULE=daily

# SSL Configuration (Production - Required)
SSL_ENABLED=true
SSL_CERT_PATH=/opt/lampp/htdocs/maruba/ssl/maruba.crt
SSL_KEY_PATH=/opt/lampp/htdocs/maruba/ssl/maruba.key

# Performance Configuration (Production - Optimized)
MEMORY_LIMIT=256M
MAX_EXECUTION_TIME=300
UPLOAD_MAX_FILESIZE=10M
POST_MAX_SIZE=10M

# Security Configuration (Production - Strict)
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
INPUT_VALIDATION_ENABLED=true
XSS_PROTECTION_ENABLED=true
CSRF_PROTECTION_ENABLED=true
SQL_INJECTION_PROTECTION_ENABLED=true

# Production Settings
DISPLAY_ERRORS=0
ERROR_REPORTING=0
DEBUG_BAR=false
PROFILER=false

# Session Security (Production - Strict)
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=Strict
SESSION_COOKIE_LIFETIME=7200

# File Permissions (Production - Secure)
UPLOAD_PERMISSIONS=640
UPLOAD_DIR_PERMISSIONS=750
LOG_PERMISSIONS=600

# Database Connection Pooling (Production - Enabled)
DB_POOL_ENABLED=true
DB_POOL_MIN_CONNECTIONS=5
DB_POOL_MAX_CONNECTIONS=20
DB_POOL_IDLE_TIMEOUT=60

# Redis Configuration (Production - Enabled)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_IN_PRODUCTION
REDIS_DB=0

# Third-party Integrations (Production - Real)
TWILIO_ACCOUNT_SID=CHANGE_THIS_IN_PRODUCTION
TWILIO_AUTH_TOKEN=CHANGE_THIS_IN_PRODUCTION
TWILIO_PHONE_NUMBER=CHANGE_THIS_IN_PRODUCTION

# Google Services (Production - Real)
GOOGLE_CLIENT_ID=CHANGE_THIS_IN_PRODUCTION
GOOGLE_CLIENT_SECRET=CHANGE_THIS_IN_PRODUCTION
GOOGLE_API_KEY=CHANGE_THIS_IN_PRODUCTION

# Payment Gateway (Production - Real)
PAYMENT_GATEWAY_ENABLED=true
PAYMENT_GATEWAY_PROVIDER=midtrans
PAYMENT_GATEWAY_API_KEY=CHANGE_THIS_IN_PRODUCTION
PAYMENT_GATEWAY_SECRET=CHANGE_THIS_IN_PRODUCTION
PAYMENT_GATEWAY_WEBHOOK_URL=https://maruba.id/webhooks/payment

# Cloud Storage (Production - Real)
AWS_ACCESS_KEY_ID=CHANGE_THIS_IN_PRODUCTION
AWS_SECRET_ACCESS_KEY=CHANGE_THIS_IN_PRODUCTION
AWS_REGION=ap-southeast-1
AWS_BUCKET=maruba-production
AWS_ENDPOINT=https://s3.ap-southeast-1.amazonaws.com

# Analytics (Production - Real)
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=google_analytics
ANALYTICS_API_KEY=CHANGE_THIS_IN_PRODUCTION

# Maintenance Mode (Production - Disabled by default)
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance. Please try again later."
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1
